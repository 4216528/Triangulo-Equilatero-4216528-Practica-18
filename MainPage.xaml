<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Triangulo.MainPage"
             
             Title="Triangulo equilatero △">

    <ScrollView>

        <VerticalStackLayout Padding="10,10,10,10">

            <Image Source="triangulo.png" HeightRequest="150" HorizontalOptions="Center" />

            <Label Text="Lado A" Margin="10,10,10,10"/>

            <Entry x:Name="LadoA"  Placeholder="Ingrese lado A del triángulo equilátero" Keyboard="Numeric" Margin="10,10,10,10"/>

            <Label Text="Lado B" Margin="10,10,10,10"/>

            <Entry x:Name="LadoB" Placeholder="Ingrese lado B del triángulo equilátero" Keyboard="Numeric" Margin="10,10,10,10"/>

            <Label Text="Lado C" Margin="10,10,10,10"/>

            <Entry x:Name="LadoC" Placeholder="Ingrese lado C del triángulo equilátero" Keyboard="Numeric" Margin="10,10,10,10"/>

            <Button x:Name="btnCalcular" Text="Calcular"  Clicked="BtnCalcular_Clicked" Margin="10,10,10,10"/>

            <Label Text="El area es:" Margin="10,10,10,10" HorizontalOptions="CenterAndExpand"/>

            <Label x:Name="Resultado" Text="" Margin="10,10,10,10" HorizontalOptions="CenterAndExpand"/>

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
